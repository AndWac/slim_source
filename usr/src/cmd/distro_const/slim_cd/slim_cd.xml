<distribution name="OpenSolaris">
	<distro_constr_params>
		<distro_constr_flags>
			<stop_on_error>true</stop_on_error>
			<checkpoint_enable resume_from="0">
				true
			</checkpoint_enable>
		</distro_constr_flags>
		<pkg_repo_default_authority>
			<main url="http://pkg.opensolaris.org" authname="opensolaris.org"/>
			<mirror url="" authname=""/>
		</pkg_repo_default_authority>
		<logfile_dir>/export/home/DC_logs</logfile_dir>
	</distro_constr_params>
	<img_params>
		<packages>
			<pkg name="SUNWcsd" attrs="manpage" tags="tags1"/>
			<pkg name="slim_cd" attrs="manpage" tags="tags1"/>
			<pkg name="SUNWcs" attrs="manpage" tags="tags1"/>
			<pkg name="slim_install" attrs="manpage" tags="tags1"/>
			<pkg name="SUNWslim-utils" attrs="manpage" tags="tags1"/>
			<pkg name="entire" attrs="manpage" tags="tags1"/>
		</packages>
		<bootroot_contents>
			<base_include type="dir">kernel</base_include>
			<base_include type="dir">platform</base_include>
			<base_include type="file">/etc/system</base_include>
			<base_include>/etc/driver_aliases</base_include>
			<base_exclude type="dir">platform/sun4u</base_exclude>
			<base_exclude type="file">etc/power.conf</base_exclude>
			<base_exclude>etc/printers.conf</base_exclude>
			<adjustment add="addfile1.dat"/>
			<adjustment delete="delfile2.dat"/>
			<adjustment add="addfile3.dat"/>
			<adjustment delete="delfile4.dat"/>
		</bootroot_contents>
		<live_img_compression type="gzip" level="9"/>
		<pkg_image_area>rpool/dc_pkg_image</pkg_image_area>
		<output_image pathname="/export/dc_output">
			<finalizer>
				<script name="/usr/share/distro_const/slim_cd/pre_bootroot_pkg_image_mod">
					<stdout_logfile>
					    /tmp/pre_bootroot_pkg_image.out
					</stdout_logfile>
					<stderr_logfile>
					    /tmp/pre_bootroot_pkg_image.out
					</stderr_logfile>
				</script>
				<script name="/usr/share/distro_const/build_dist.bash">
					<stdout_logfile>
					    /tmp/build_dist.bash.out
					</stdout_logfile>
					<stderr_logfile>
					    /tmp/build_dist.bash.out
					</stderr_logfile>
				</script>
				<script name="/usr/share/distro_const/slim_cd/post_bootroot_pkg_image_mod">
					<stdout_logfile>
					    /tmp/post_bootroot_pkg_image.out
					</stdout_logfile>
					<stderr_logfile>
					    /tmp/post_bootroot_pkg_image.out
					</stderr_logfile>
				</script>
				<script name="/usr/share/distro_const/create_iso">
					<stdout_logfile>
					    /tmp/create_iso.out
					</stdout_logfile>
					<stderr_logfile>
					    /tmp/create_iso.out
					</stderr_logfile>
				</script>
				<script name="/usr/share/distro_const/create_usb">
					<stdout_logfile>
					    /tmp/create_usb.out
					</stdout_logfile>
					<stderr_logfile>
					    /tmp/create_usb.out
					</stderr_logfile>
				</script>
			</finalizer>
			<bootroot>
				<compression type="gzip" level="9"/>
				<adjustment add="/kernel/drv/mydriver"/>
			</bootroot>
		</output_image>
	</img_params>
</distribution>
